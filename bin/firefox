#!/bin/sh

if [ -v WSLENV ]; then
	ProgramFiles="$(wslpath "$(wex cmd.exe /c "<nul set /p=%ProgramFiles%" 2>/dev/null)")"
	PATH="${PATH:+"${PATH}:"}${ProgramFiles}/Mozilla Firefox:${ProgramFiles} (x86)/Mozilla Firefox" firefox.exe "$@"
elif [ -e "$HOME/.nix-profile/bin/firefox" ]; then
	~/.nix-profile/bin/firefox "$@"
elif [ -e "/usr/bin/firefox" ]; then
	/usr/bin/firefox "$@"
elif [ "$(which firefox)" != "$0" ]; then
	firefox "$@"
elif [ -v TOOLBOX_PATH ]; then
	ssh localhost DISPLAY=$DISPLAY WAYLAND_DISPLAY=$WAYLAND_DISPLAY firefox $@
else
	echo "firefox not installed or not found";
	exit 1;
fi
