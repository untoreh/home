#!/bin/sh
[ -z "$UID" ] && UID=$(id -u)
name=${EMACS_SERVER_NAME:-server}
s_tmp=/tmp/emacs$UID/${name}
s_run=/run/user/$UID/emacs/${name}
s_wslg=/mnt/wslg/runtime-dir/emacs/${name}
# export GDK_BACKEND=x11 CLUTTER_BACKEND=x11
if [ -e $s_run ]; then
    exec emacsclient -s $s_run -cn $@
elif [ -e $s_tmp ]; then
    exec emacsclient -s $s_tmp -cn $@
elif [ -e $s_wslg ]; then
    exec emacsclient -s $s_wslg -cn $@
else
    msg="Couldn't start emacs client because no server was found"
    echo $msg
    notify-send $msg
fi
