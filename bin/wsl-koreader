#!/bin/sh

cmd=~/.nix-profile/bin/koreader
[ ! -e $cmd ] && cmd=koreader


## only support opening one file
if [ -n "$@" ]; then
	if [ "${1/\\wsl.localhost}" != "$1" ]; then
		eval "p=$(wslpath -u "${1/\\wsl.localhost\\$WSL_DISTRO_NAME}")"
		p=$(printf '%q' "$p")
		if [ "$p" != "$1" ]; then
			eval "exec $cmd $p"
		else
			echo "Can't access files from another distro :("
			exit 1
		fi
	elif [ "${1:0:1}" = \" ]; then
		eval "p=\$(wslpath $1)"
	else 
		p=$(wslpath "$1")
	fi
	if [ -e "$p" ]; then
		exec $cmd "$p"
	else
		eval "exec $cmd $@"
	fi
else
	exec $cmd
fi
